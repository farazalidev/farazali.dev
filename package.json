{
    "private": true,
    "scripts": {
        "build": "turbo build",
        "dev": "turbo dev",
        "start": "turbo start",
        "lint": "turbo lint",
        "type-check": "turbo type-check",
        "clean": "turbo clean",
        "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json}\"",
        "test": "turbo run test",
        "prepare": "husky install"
    },
    "devDependencies": {
        "@repo/eslint-config": "workspace:*",
        "@repo/typescript-config": "workspace:*",
        "@types/node": "^20.11.24",
        "eslint": "^8.57.0",
        "eslint-plugin-prettier": "^5.1.3",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.2",
        "prettier": "^3.2.5",
        "prettier-plugin-tailwindcss": "^0.5.14",
        "turbo": "latest"
    },
    "packageManager": "pnpm@8.9.0",
    "engines": {
        "node": ">=18"
    },
    "lint-staged": {
        "./apps/**/*.{js,ts,jsx.tsx}": [
            "eslint --cache --fix"
        ],
        "./packages/**/*.{js,ts,jsx,tsx}": [
            "eslint --cache --fix"
        ],
        "*.js": [
            "eslint --cache --fix"
        ],
        "*.{ts,tsx,md,json}": [
            "prettier --write"
        ],
        "*.{ts,tsx,md}": "prettier --write"
    }
}
