{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "clean": "turbo clean",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "test": "turbo run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "lint-staged": "^15.2.2",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "@repo/typescript-config": "workspace:*",
    "@repo/eslint-config": "workspace:*",
    "prettier-plugin-tailwindcss": "^0.5.11",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  },
  "lint-staged": {
    "./apps/**/*.{js,ts,jsx.tsx}": [
      "eslint --cache --fix"
    ],
    "./packages/**/*.{js,ts,jsx,tsx}": [
      "eslint --cache --fix"
    ],
    "*.js": "eslint --cache --fix",
    "*.{ts,tsx,md,json}": "prettier --write",
    "*.{ts,tsx,md}": "prettier --write"
  }
}
